# Environment Configuration for Meu Pote de Frases
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
PORT=3001

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:your_secure_password@db:5432/meupote

# PostgreSQL credentials
POSTGRES_DB=meupote
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis connection string with password
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_secure_redis_password

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Generate a secure random string for JWT_SECRET
# Example: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# URL where the frontend is hosted
FRONTEND_URL=https://meupote.davijr.com
NEXT_PUBLIC_API_URL=http://backend:3001

# ===========================================
# PUSH NOTIFICATIONS (VAPID)
# ===========================================
# Generate VAPID keys using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your-email@example.com

# For frontend (public)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# ===========================================
# OPTIONAL SETTINGS
# ===========================================
# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
